---
interface Props {
    title: string;
    subtitle?: string;
    /** Optional eyebrow label above the title (e.g. "Series") */
    eyebrow?: string;
}

const { title, subtitle, eyebrow } = Astro.props;
---

<header class="mb-16 text-center">
    {eyebrow && (
        <p class="text-sm font-semibold uppercase tracking-wide text-muted-foreground mb-3">
            {eyebrow}
        </p>
    )}
    <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl text-balance">
        {title}
    </h1>
    {subtitle && (
        <p class="mt-4 text-lg text-muted-foreground">{subtitle}</p>
    )}
</header>
