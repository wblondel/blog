---
import { getLangFromUrl } from "../i18n/utils";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "../styles/syntax.css";
import "../styles/geist-mono.css";

interface Props {
  title: string;
  description?: string;
  alternates?: { lang: string; href: string }[];
}

const {
  title,
  description = "William Blondel - Senior full-stack web developer and amateur genealogist.",
  alternates,
} = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}favicon.ico`}
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    {alternates ? alternates.map((alt: { lang: string; href: string }) => (
      <link rel="alternate" hreflang={alt.lang} href={alt.href} />
    )) : (
      <>
        <link
          rel="alternate"
          hreflang="en"
          href={`${Astro.site}${import.meta.env.BASE_URL.slice(1)}en${
            Astro.url.pathname.startsWith(import.meta.env.BASE_URL)
              ? "/" + Astro.url.pathname.slice(import.meta.env.BASE_URL.length)
              : Astro.url.pathname.replace(/^\/(en|fr)/, "").replace(/^\//, "")
          }`}
        />
        <link
          rel="alternate"
          hreflang="fr"
          href={`${Astro.site}${import.meta.env.BASE_URL.slice(1)}fr${
            Astro.url.pathname.startsWith(import.meta.env.BASE_URL)
              ? "/" + Astro.url.pathname.slice(import.meta.env.BASE_URL.length)
              : Astro.url.pathname.replace(/^\/(en|fr)/, "").replace(/^\//, "")
          }`}
        />
        <link
          rel="alternate"
          hreflang="x-default"
          href={`${Astro.site}${import.meta.env.BASE_URL.slice(1)}en${
            Astro.url.pathname.startsWith(import.meta.env.BASE_URL)
              ? "/" + Astro.url.pathname.slice(import.meta.env.BASE_URL.length)
              : Astro.url.pathname.replace(/^\/(en|fr)/, "").replace(/^\//, "")
          }`}
        />
      </>
    )}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link
      href="https://fonts.googleapis.com/css2?family=Google+Sans+Flex:opsz,wght@6..144,1..1000&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Google+Sans+Flex:opsz,wght@6..144,1..1000&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <script type="text/javascript" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag("js", new Date());
    </script>
  </head>
  <body
    class="__variable_e2c820 bg-background dark:bg-background text-foreground antialiased"
  >
    <script is:inline>
      ((a, b, c, d, e, f, g, h) => {
